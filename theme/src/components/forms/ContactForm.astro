---
import { Button, FormInput, FormSelect, FormTextarea } from '@littlesticks/odyssey-theme-components';

const selectOptions = [
  "Google Search",
  "Social Media",
  "Email",
]

---

<form name="Contact Form" method="POST" action="/contact-thank-you">
  <FormInput type="text" label="名前" name="Name" placeholder="" />
  <FormInput type="email" label="Eメール" name="Email" placeholder="" />
  <FormTextarea label="ご質問" name="Message" placeholder="" />
  <Button>送信</Button>
</form>

<style>
  form {
    display: grid;
    grid-template-columns: 1fr;
    gap: 1rem;
  }
</style>
