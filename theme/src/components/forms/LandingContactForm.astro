---
import {Icon} from 'astro-icon'
import { Button, FormInput, FormSelect, FormTextarea } from '@littlesticks/odyssey-theme-components';

const selectOptions = [
  "Google Search",
  "Social Media",
  "Email",
]

---

<form name="Contact Form" method="POST" action="/contact-thank-you" >
  <FormInput type="text" label="お名前" name="First Name" placeholder="" />
  <FormInput type="text" label="Eメール" name="Last Name" placeholder="" />
  <FormInput type="email" label="ご質問" name="Email" placeholder="" />
  <Button customIcon>送信
    <Fragment slot="icon">
      <Icon name="ic:baseline-chevron-right" />
    </Fragment>
  </Button>
</form>

<style>
  form {
    display: grid;
    grid-template-columns: 1fr;
    gap: 1rem;
  }
</style>
